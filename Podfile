# platform :ios, '9.0'

target 'LoveChat' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Margie
pod "Pastel"  # 渐变
pod 'EmptyDataSet-Swift'  # 无数据占位图
pod 'IQKeyboardManagerSwift' # 键盘适应
pod 'SnapKit'	# 自动布局
pod 'YNSearch'
pod 'SwiftyJSON' # JSON转对象
pod 'HandyJSON' # JSON 数据转模型
pod 'SwifterSwift'  # 扩展类集合
end
